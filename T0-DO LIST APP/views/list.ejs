<html>
    <head>
        <title>To do List</title>
        <link rel="stylesheet" href="../public/style.css" type="text/css"/>
    </head>
    <body>
        <h1 class="todo">TODO APP</h1>
        <hr>
        <form action="/add-task" method="post">
            <p>DESCRIPTION</p>
            <textarea class="desc" name="description" placeholder="What do you need to do?" required></textarea>
            <hr>
            <div class="cd">
                <div class="desc">
                    <p>CATEGORY</p>
                    <select name="category" class="desc ctgry" required>
                        <option value="Choose a category" selected>Choose a category</option>
                        <option value="Personal">Personal</option>
                        <option value="Public">Public</option>
                        <option value="N/A">N/A</option>
                    </select>
                </div>
                <hr class="middle">
                <div class="desc">
                    <p>DUE DATE</p>
                    <input class="desc ddate" type="date" name="date" placeholder="dd-mm-yyyy" required>
                </div>
            </div>
            <hr>
            <div class="btns">
                <button class="add" type="submit">+ ADD TASK</button>
            </div>
            <hr style="margin-top: 3rem;">
        </form>
        
        <div>
            <ul>
                <% for(let i of lists) {%>
                    <li class="list">
                        <p><%=i.description%><br><%=i.date.toString().slice(4,15)%></p>
                        <p class="cat"><%=i.category%></p>
                        <a href="/delete-task/?id=<%=i._id%>"><button class="delete" type="submit">â–¼ DELETE TASK</button></a>
                    </li>
                <%}%>
            </ul>
    </body>
</html>